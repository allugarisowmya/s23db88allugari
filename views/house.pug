 - let items = results;
   each item in items
    - let destination = `dispatch("/house/update?id=${item._id}")`
      div
       p houseName  - #{item.houseName}
       p price  - #{item.price}
       p description - #{item.description}
       button.btn( class="btn-primary ml-1", onclick= destination) Update
       br
       br
