extends layout

block content
    h1.text-center= title

    if (toShow == null)
        h2 No instance to delete
    else
        // Use a card layout for better styling and centering
        .card.mx-auto.mt-5
            .card-body.text-center
                div.row
                    div(class='houseAttr') house ID:
                    div #{toShow._id}
                div.row
                    div(class='houseAttr') houseName:
                    div #{toShow.houseName}
                div.row
                    div(class='houseAttr') price:
                    div #{toShow.price}
                div.row
                    div(class='houseAttr') description:
                    div #{toShow.description}

    .row.mt-3
        .col.text-center
            a.btn.btn-primary(href='/house') Back to house List